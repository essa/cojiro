<!doctype html>
<head>
  <title>Jasmine(Rice) Spec Runner</title>
  <%= stylesheet_link_tag "jasmine", "spec" %>
  <script>
    window.cfg = <%= Requirejs::Rails::Engine.config.requirejs.run_config.to_json.html_safe %>;
  </script>
  <% RequirejsHelper._priority = spec_files.map { |s| s.sub(/\.js$/,'') } %>
  <%= requirejs_include_tag %>
  <script>
    require([<%= spec_files.map { |f| "'#{f.sub(/\.js$/,'')}'" }.join(',') %>]);
  </script>
  <%= javascript_include_tag "jasminerice", "spec" %>
  <%= csrf_meta_tags %>
</head>
<body>
</body>
</html>
